{
    "env": {
        "browser": true,
        "es2020": true,
        "node": true
    },
    "extends": "plugin:react/recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "import/no-unresolved": "off",
        "react/jsx-filename-extension": "off",
        "import/prefer-default-export": "off",
        "react/prop-types": "off",
        "react/no-array-index-key": "off",
        "react/display-name": "off",
        "semi": [
            "error",
            "never"
        ],
        "quotes": [
            "error",
            "single"
        ]
    }
}
